<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Thickness x:Key="marginOp">
        2,8,8,8
    </Thickness>
    <Thickness x:Key="marginOdd">
        8
    </Thickness>
    <Thickness x:Key="marginEven">
        8,0
    </Thickness>
    <Style BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}" TargetType="ComboBox">
        <Setter Property="DisplayMemberPath" Value="." />
        <Setter Property="materialDesign:ComboBoxAssist.ClassicMode" Value="True" />
    </Style>
    <Style BasedOn="{StaticResource MaterialDesignDiscreteSlider}" TargetType="Slider">
        <Setter Property="materialDesign:SliderAssist.OnlyShowFocusVisualWhileDragging" Value="True" />
    </Style>
    <Style BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}" TargetType="TextBox" />
    <Style TargetType="UserControl">
        <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}" />

        <Setter Property="TextElement.Foreground" Value="{DynamicResource MaterialDesignBody}" />
    </Style>
</ResourceDictionary>